<div>
    <ejs-tooltip id="tooltip" position='BottomCenter'
                 target="th.tooltipcolumn">
        <e-content-template>
            <ejs-grid id="Grid" dataSource="@ViewBag.DataSource" load="load">
                <e-grid-columns>
                    <e-grid-column field="OrderID" headerText="Order ID"  customAttributes=@(new{@class="tooltipcolumn"}) textAlign="Right" width="120"></e-grid-column>
                    <e-grid-column field="CustomerID" headerText="Customer ID" width="150"></e-grid-column>
                    <e-grid-column field="ShipCity" headerText="Ship City" width="150"></e-grid-column>
                    <e-grid-column field="ShipName" headerText="Ship Name" width="150"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>
        </e-content-template>
    </ejs-tooltip>
</div>
<script>
    function load() {
         var grid = document.getElementById('Grid').ej2_instances[0];
        grid.element.addEventListener('mouseover', function (args) {
                     var tooltip = document.getElementById('tooltip').ej2_instances[0];
                if(args.target.classList.contains('tooltipcolumn') && args.target.tagName == 'TH') {
          tooltip.content = args.target.innerText; 
            }
        })
    }
</script>
